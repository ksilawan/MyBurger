<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="282dp"

            app:srcCompat="@drawable/banner" />


        <ImageView
            android:id="@+id/firstburger"
            android:layout_width="165dp"
            android:layout_height="156dp"
            android:translationX="20dp"
            android:translationY="-20dp"
            app:srcCompat="@drawable/burgerking" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:text="The Classic Bunz \n         P250"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="30dp"
            android:translationY="-15dp" />


        <ImageView
            android:id="@+id/secondburger"
            android:layout_width="179dp"
            android:layout_height="186dp"
            android:translationX="210dp"
            android:translationY="-310dp"
            app:srcCompat="@drawable/sec" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:text="The Devil's Bunz \n         P220"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="225dp"
            android:translationY="-330dp" />

        <ImageView
            android:id="@+id/thirdburger"
            android:layout_width="174dp"
            android:layout_height="205dp"
            android:translationX="30dp"
            android:translationY="-400dp"
            app:srcCompat="@drawable/third" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:text="The Chicks' Bunz \n         P200"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="50dp"
            android:translationY="-440dp" />


        <ImageView
            android:id="@+id/fourthburger"
            android:layout_width="174dp"
            android:layout_height="205dp"
            android:translationX="220dp"
            android:translationY="-735dp"
            app:srcCompat="@drawable/fourth" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:text="Fish Bunz \n    P240"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="255dp"
            android:translationY="-775dp" />


        <ImageView
            android:id="@+id/fifthburger"
            android:layout_width="241dp"
            android:layout_height="201dp"
            android:translationX="95dp"
            android:translationY="-850dp"
            app:srcCompat="@drawable/fifth" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:text="Three Lucky Bunz \n           P350"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="140dp"
            android:translationY="-860dp" />






    </LinearLayout>
</ScrollView>
